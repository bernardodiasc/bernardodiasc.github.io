---
interface Props {
  id: string;
  width?: string;
  height?: string;
}

const { id, width = '560', height = '315' } = Astro.props;
---

{id && (
  <div class="video">
    <iframe
      title={id}
      width={width}
      height={height}
      src={`https://www.youtube.com/embed/${id}?rel=0`}
      frameborder="0"
      allow="encrypted-media"
      allowfullscreen
    ></iframe>
  </div>
)}
