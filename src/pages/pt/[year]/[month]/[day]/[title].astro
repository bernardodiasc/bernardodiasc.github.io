---
import { getCollection, getEntry, render } from 'astro:content';
import Layout from '../../../../../layouts/Layout.astro';
import PostDetails from '../../../../../components/PostDetails.astro';
import Disqus from '../../../../../components/Disqus.astro';
import { isPortuguesePost, getPostBaseId } from '../../../../../i18n/utils';

export async function getStaticPaths() {
  const posts = await getCollection('posts', ({ id, data }) => !data.draft && isPortuguesePost(id));
  return posts.map((post) => {
    const baseId = getPostBaseId(post.id);
    const [year, month, day, ...rest] = baseId.split('-');
    return {
      params: { year, month, day, title: rest.join('-') },
      props: { post },
    };
  });
}

const { post } = Astro.props;
const { Content } = await render(post);

const categoryEntry = post.data.category
  ? await getEntry('categories', post.data.category)
  : null;

const category = categoryEntry
  ? { id: categoryEntry.id, title: categoryEntry.data.title, icon: categoryEntry.data.icon }
  : undefined;

const siteUrl = 'https://bernardodiasdacruz.com';
const pageUrl = `${siteUrl}${Astro.url.pathname}`;
---

<Layout
  title={post.data.title}
  description={post.data.excerpt}
  image={post.data.thumbnail || undefined}
>
  <PostDetails
    title={post.data.title}
    date={post.data.date}
    category={category}
    url={pageUrl}
  >
    <Content />
  </PostDetails>
  <Disqus
    identifier={`pt-${getPostBaseId(post.id)}`}
    title={post.data.title}
    url={pageUrl}
  />
</Layout>
